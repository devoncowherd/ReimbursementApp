<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.reimbursemenonspringver.ui.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FailedLoginServlet</servlet-name>
        <servlet-class>com.example.reimbursemenonspringver.ui.servlet.FailedLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FailedLoginServlet</servlet-name>
        <url-pattern>/failed</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EmployeeHomepageServlet</servlet-name>
        <servlet-class>com.example.reimbursemenonspringver.ui.servlet.EmployeeHomepageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeHomepageServlet</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ManagerHomepageServlet</servlet-name>
        <servlet-class>com.example.reimbursemenonspringver.ui.servlet.ManagerHomepageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerHomepageServlet</servlet-name>
        <url-pattern>/manager</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>com.example.reimbursemenonspringver.ui.servlet.EditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RequestReimbursementServlet</servlet-name>
        <servlet-class>com.example.reimbursemenonspringver.ui.servlet.RequestReimbursementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestReimbursementServlet</servlet-name>
        <url-pattern>/request</url-pattern>
    </servlet-mapping>
</web-app>